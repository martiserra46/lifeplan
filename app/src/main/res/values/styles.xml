<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar styles -->
    <style name="styleToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightToolbar</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/colorToolbar</item>
        <item name="android:textColor">@color/colorTextToolbar</item>
        <item name="android:titleTextAppearance">@style/textAppearanceTitleToolbar</item>
    </style>

    <style name="stylePrimaryToolbar" parent="styleToolbar">
        <item name="titleTextAppearance">@style/textAppearanceTitlePrimaryToolbar</item>
    </style>

    <style name="styleSecondaryToolbar" parent="styleToolbar">
        <item name="titleTextAppearance">@style/textAppearanceTitleSecondaryToolbar</item>
    </style>

    <!-- Text styles -->
    <style name="styleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/textAppearanceText</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="styleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/textAppearanceText</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <!-- Life description style -->
    <style name="styleLifeDescriptionTextView" parent="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/paddingTopContainer</item>
        <item name="android:paddingBottom">@dimen/paddingBottomContainer</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textAppearance">@style/textAppearanceLifeDescription</item>
        <item name="android:lineHeight">@dimen/lineHeightDescription</item>
    </style>

    <style name="styleLifeDescriptionEditText" parent="styleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/paddingTopContainer</item>
        <item name="android:paddingBottom">@dimen/paddingBottomContainer</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textAppearance">@style/textAppearanceLifeDescription</item>
        <item name="android:lineHeight">@dimen/lineHeightDescription</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Empty section style -->
    <style name="styleEmptySectionTextView" parent="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/textAppearanceEmptySection</item>
        <item name="android:textColor">@color/colorEmptySection</item>
        <item name="android:lineHeight">@dimen/lineHeightDescription</item>
        <item name="android:maxWidth">@dimen/maxWidthTextEmpty</item>
    </style>

    <style name="styleEmptySectionImageView">
        <item name="android:layout_width">@dimen/sizeIconEmpty</item>
        <item name="android:layout_height">@dimen/sizeIconEmpty</item>
        <item name="android:tint">@color/colorEmptySection</item>
    </style>

    <!-- Recycler view items texts style -->
    <style name="stylePrimaryTextRecyclerViewItem">
        <item name="android:textColor">@color/colorPrimaryTextRecyclerViewItem</item>
        <item name="android:textAppearance">@style/textAppearancePrimaryTextRecyclerViewItem</item>
    </style>

    <style name="styleSecondaryTextRecyclerViewItem">
        <item name="android:textColor">@color/colorSecondaryTextRecyclerViewItem</item>
        <item name="android:textAppearance">@style/textAppearanceSecondaryTextRecyclerViewItem
        </item>
    </style>

    <!-- Item sections texts styles -->
    <style name="styleTitleTextView" parent="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textAppearance">@style/textAppearanceTitle</item>
    </style>

    <style name="styleDescriptionTextView" parent="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDescriptionText</item>
        <item name="android:textAppearance">@style/textAppearanceDescription</item>
        <item name="android:lineHeight">@dimen/lineHeightDescription</item>
    </style>

    <style name="styleTitleEditText" parent="styleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textAppearance">@style/textAppearanceTitle</item>
    </style>

    <style name="styleDescriptionEditText" parent="styleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textColor">@color/colorDescriptionText</item>
        <item name="android:textAppearance">@style/textAppearanceDescription</item>
        <item name="android:lineHeight">@dimen/lineHeightDescription</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="styleSpinnerTextView" parent="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textAppearance">@style/textAppearanceSpinner</item>
    </style>

    <style name="styleSpinnerDropdownTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:textAppearance">@style/textAppearanceSpinner</item>
    </style>


    <!-- Text Appearances -->
    <!-- Default text appearance -->
    <style name="textAppearanceText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="textAppearanceTitleToolbar" parent="textAppearanceText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <style name="textAppearanceTitlePrimaryToolbar" parent="textAppearanceTitleToolbar">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
    </style>

    <style name="textAppearanceTitleSecondaryToolbar" parent="textAppearanceTitleToolbar">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <!-- Navigation menu items text appearances -->
    <style name="textAppearanceSelectedNavigationMenuItem">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="textAppearanceUnselectedNavigationMenuItem">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
    </style>

    <!-- Life description text appearance -->
    <style name="textAppearanceLifeDescription" parent="textAppearanceText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
    </style>

    <!-- Empty section text appearance -->
    <style name="textAppearanceEmptySection" parent="textAppearanceText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
    </style>

    <!-- Recycler view texts text appearances -->
    <style name="textAppearancePrimaryTextRecyclerViewItem" parent="textAppearanceText">
        <item name="android:textSize">@dimen/textSizePrimaryTextRecyclerViewItem</item>
    </style>

    <style name="textAppearanceSecondaryTextRecyclerViewItem" parent="textAppearanceText">
        <item name="android:textSize">@dimen/textSizeSecondaryTextRecyclerViewItem</item>
    </style>

    <!-- Item sections texts text appearances -->
    <style name="textAppearanceTitle" parent="textAppearanceText">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
    </style>

    <style name="textAppearanceDescription" parent="textAppearanceText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
    </style>

    <style name="textAppearanceSpinner" parent="textAppearanceText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeSpinnerTextView</item>
    </style>
</resources>