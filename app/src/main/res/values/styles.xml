<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Toolbar styles -->
    <style name="styleToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/heightToolbar</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">@color/colorToolbar</item>
        <item name="titleTextAppearance">@style/textAppearanceTitleToolbar</item>
    </style>

    <style name="stylePrimaryToolbar" parent="styleToolbar">
        <item name="titleTextAppearance">@style/textAppearanceTitlePrimaryToolbar</item>
    </style>

    <style name="styleSecondaryToolbar" parent="styleToolbar">
        <item name="titleTextAppearance">@style/textAppearanceTitleSecondaryToolbar</item>
    </style>

    <style name="textAppearanceTitleToolbar" parent="TextAppearance.Widget.AppCompat.Toolbar.Title"/>

    <style name="textAppearanceTitlePrimaryToolbar" parent="textAppearanceTitleToolbar">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
    </style>

    <style name="textAppearanceTitleSecondaryToolbar" parent="textAppearanceTitleToolbar">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>


    <!-- Text styles -->
    <style name="styleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/textAppearanceText</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="styleEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/textAppearanceText</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

    <!-- Life description style -->
    <style name="styleLifeDescriptionTextView" parent="styleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineHeight">26sp</item>
    </style>

    <style name="styleLifeDescriptionEditText" parent="styleEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/paddingTopContainer</item>
        <item name="android:paddingBottom">@dimen/paddingBottomContainer</item>
        <item name="android:paddingStart">@dimen/paddingStartContainer</item>
        <item name="android:paddingEnd">@dimen/paddingEndContainer</item>
        <item name="android:lineHeight">26sp</item>
        <item name="android:gravity">start</item>
    </style>

    <!-- Recycler view items texts style -->
    <style name="stylePrimaryTextRecyclerViewItem">
        <item name="android:textColor">@color/colorPrimaryTextRecyclerViewItem</item>
        <item name="android:textAppearance">@style/textAppearancePrimaryTextRecyclerViewItem</item>
    </style>

    <style name="styleSecondaryTextRecyclerViewItem">
        <item name="android:textColor">@color/colorSecondaryTextRecyclerViewItem</item>
        <item name="android:textAppearance">@style/textAppearanceSecondaryTextRecyclerViewItem</item>
    </style>


    <style name="styleTitleTv" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/textAppearanceTitleTv</item>
        <item name="android:textColor">@color/colorTitleText</item>
    </style>

    <style name="styleDescriptionTv" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/textAppearanceDescriptionTv</item>
        <item name="android:lineHeight">30dp</item>
    </style>

    <style name="textAppearanceTitleTv" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textAppearanceDescriptionTv" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="styleTitleEt" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAppearance">@style/textAppearanceTitleEt</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="android:textCursorDrawable">@drawable/cs_edit_text_title</item>
    </style>

    <style name="styleDescriptionEt" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">@style/textAppearanceDescriptionEt</item>
        <item name="android:lineHeight">30dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="textAppearanceTitleEt" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeTitle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textAppearanceDescriptionEt" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/textSizeDescription</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="styleSpinnerTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeSpinnerTextView</item>
    </style>

    <style name="styleSpinnerDropdownTv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSizeSpinnerTextView</item>
    </style>


    <!-- Text Appearances -->
    <!-- Default text appearance -->
    <style name="textAppearanceText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_16sp</item>
    </style>

    <!-- Recycler view texts text appearances -->
    <style name="textAppearancePrimaryTextRecyclerViewItem" parent="textAppearanceText">
        <item name="android:textSize">@dimen/textSizePrimaryTextRecyclerViewItem</item>
    </style>

    <style name="textAppearanceSecondaryTextRecyclerViewItem" parent="textAppearanceText">
        <item name="android:textSize">@dimen/textSizeSecondaryTextRecyclerViewItem</item>
    </style>

    <!-- Navigation menu items text appearances -->
    <style name="textAppearanceSelectedNavigationMenuItem">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_14sp</item>
    </style>

    <style name="textAppearanceUnselectedNavigationMenuItem">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">@dimen/dimen_12sp</item>
    </style>
</resources>