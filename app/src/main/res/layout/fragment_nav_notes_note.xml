<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".ui.fragments.sections.up.notes.note.info.UpInfoNoteFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_nav_notes_note_tb"
        style="@style/styleSecondaryToolbar" />

    <TextView
        android:id="@+id/fragment_nav_notes_note_title_tv"
        style="@style/styleTitleTextView"
        tools:text="Read 1h a day" />

    <TextView
        android:id="@+id/fragment_nav_notes_note_importance_tv"
        style="@style/styleSpinnerTextView"
        tools:text="High Importance"
        tools:textColor="@color/colorNoteHighImportance" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/paddingHorizontalContainer"
        android:paddingVertical="@dimen/dimen_16dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/fragment_nav_notes_note_description_tv"
            style="@style/styleDescriptionTextView"
            tools:text="I have to read 1h a day to learn new things and improve my productivity" />

    </ScrollView>

</LinearLayout>