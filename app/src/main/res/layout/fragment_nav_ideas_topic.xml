<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.up.ideas.topic.info.UpInfoTopicFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_nav_ideas_topic_tb"
        style="@style/styleSecondaryTb" />

    <TextView
        android:id="@+id/fragment_nav_ideas_topic_title_tv"
        style="@style/styleTitleTv"
        tools:text="Ideas about how to live your life" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_nav_ideas_topic_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/rvi_ideas_idea" />

</LinearLayout>