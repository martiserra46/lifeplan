<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.nav.ideas.idea.IdeaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_nav_ideas_idea_tb"
        style="@style/mainToolbarStyle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/windowHorizontalPadding"
        android:paddingTop="@dimen/windowTopPadding"
        android:paddingBottom="@dimen/windowBottomPadding">

        <TextView
            android:id="@+id/fragment_nav_ideas_idea_title_tv"
            style="@style/titleStyle"
            android:layout_width="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Read 1h a day" />

        <TextView
            android:id="@+id/fragment_nav_ideas_idea_importance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#FF7878"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_nav_ideas_idea_title_tv"
            tools:text="High Importance" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_nav_ideas_idea_importance_tv">

            <TextView
                android:id="@+id/fragment_nav_ideas_idea_description_tv"
                style="@style/descriptionStyle"
                tools:text="I have to read 1h a day to learn new things and improve my productivity" />

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>