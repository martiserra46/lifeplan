<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingHorizontal="@dimen/paddingHorizontalContainer"
    android:paddingVertical="@dimen/paddingVerticalContainer"
    android:scrollbars="none"
    tools:context=".ui.fragments.sections.nav.life.NavLifeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragment_nav_life_empty_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/fragment_nav_life_empty_iv"
            style="@style/styleEmptySectionImageView"
            android:contentDescription="@string/edit_life_image"
            app:layout_constraintEnd_toStartOf="@id/fragment_nav_life_empty_tv"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fragment_nav_life_empty_tv"
            app:srcCompat="@drawable/ic_edit" />

        <TextView
            android:id="@+id/fragment_nav_life_empty_tv"
            style="@style/styleEmptySectionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:maxWidth="@dimen/maxWidthTextEmpty"
            android:text="@string/empty_life_message"
            app:drawableTint="@color/colorEmptySection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fragment_nav_life_empty_iv"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/fragment_nav_life_text_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="visible"
        tools:visibility="gone">

        <TextView
            android:id="@+id/fragment_nav_life_text_tv"
            style="@style/styleLifeDescriptionTextView"
            tools:text="@tools:sample/lorem/random" />

    </ScrollView>
</FrameLayout>