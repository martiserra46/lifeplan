<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".ui.fragments.up.situation.day.info.UpInfoDayFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_nav_situation_day_tb"
        style="@style/styleSecondaryToolbar" />

    <TextView
        android:id="@+id/fragment_nav_situation_day_date_tv"
        style="@style/styleTitleTextView"
        tools:text="26/09/2020" />

    <TextView
        android:id="@+id/fragment_nav_situation_day_satisfaction_tv"
        style="@style/styleSpinnerTextView"
        android:textColor="@color/colorDayHighSatisfaction"
        tools:text="High Satisfaction" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/paddingHorizontalContainer"
        android:paddingVertical="@dimen/dimen_16dp"
        android:scrollbars="none">

        <TextView
            android:id="@+id/fragment_nav_situation_day_description_tv"
            style="@style/styleDescriptionTextView"
            tools:text="I have studied a lot and I have improved my overall health" />

    </ScrollView>

</LinearLayout>