<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.secondary_fragments.nav.ideas.idea.add.AddIdeaFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_nav_ideas_idea_save_tb"
        style="@style/secondaryToolbarStyle" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/windowHorizontalPadding"
        android:paddingTop="@dimen/windowTopPadding"
        android:paddingBottom="@dimen/windowBottomPadding">

        <EditText
            android:id="@+id/fragment_nav_ideas_idea_save_title_et"
            style="@style/editTextTitleStyle"
            android:layout_width="0dp"
            android:hint="@string/title_of_the_idea"
            android:importantForAutofill="no"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fragment_nav_ideas_idea_save_importance_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="#FF7878"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_nav_ideas_idea_save_title_et"
            tools:text="High Importance" />

        <EditText
            android:id="@+id/fragment_nav_ideas_idea_save_description_et"
            style="@style/editTextDescriptionStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:hint="@string/description_of_the_idea"
            android:importantForAutofill="no"
            android:inputType="text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_nav_ideas_idea_save_importance_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>