<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.fragments.instructions.InstructionsFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_instructions_tb"
        style="@style/styleToolbar"
        android:layout_width="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_instructions_icon_iv"
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/icon_image"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_instructions_tb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_life_plan" />

    <TextView
        android:id="@+id/fragment_instructions_app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/app_name"
        android:textAppearance="@style/textAppearanceTitlePrimaryToolbar"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_instructions_tb"
        app:layout_constraintStart_toEndOf="@+id/fragment_instructions_icon_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_instructions_fcv"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_instructions_tb"
        app:navGraph="@navigation/fragment_instructions_nav_graph" />

</androidx.constraintlayout.widget.ConstraintLayout>