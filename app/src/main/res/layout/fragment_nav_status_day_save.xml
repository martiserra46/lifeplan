<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".ui.fragments.sections.up.status.day.save.add.UpAddDayFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_nav_status_day_save_tb"
        style="@style/styleSecondaryToolbar" />

    <TextView
        android:id="@+id/fragment_nav_status_day_save_date_tv"
        style="@style/styleTitleTextView"
        tools:text="26/9/2020" />

    <Spinner
        android:id="@+id/fragment_nav_status_day_save_satisfaction_sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/spinner_item" />

    <EditText
        android:id="@+id/fragment_nav_status_day_save_description_et"
        style="@style/styleDescriptionEditText"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="@string/day_add"
        android:importantForAutofill="no"
        android:inputType="text|textMultiLine" />

</LinearLayout>