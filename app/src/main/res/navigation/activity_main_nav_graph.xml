<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.main_fragments.MainFragment"
        android:label="mainFragment"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_editLifeFragment"
            app:destination="@id/editLifeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_topicFragment"
            app:destination="@id/topicFragment" />
        <action
            android:id="@+id/action_mainFragment_to_dayFragment"
            app:destination="@id/dayFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addTopicFragment"
            app:destination="@id/addTopicFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addDayFragment"
            app:destination="@id/addDayFragment" />
        <argument
            android:name="navSection"
            app:argType="com.martiserramolina.lifeplan.enums.NavSection"
            android:defaultValue="LIFE" />
    </fragment>
    <fragment
        android:id="@+id/ideaFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.ideas.idea.IdeaFragment"
        android:label="ideaFragment"
        tools:layout="@layout/fragment_nav_ideas_idea" >
        <action
            android:id="@+id/action_ideaFragment_to_editIdeaFragment"
            app:destination="@id/editIdeaFragment" />
    </fragment>
    <fragment
        android:id="@+id/addIdeaFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.ideas.idea.add.AddIdeaFragment"
        android:label="addIdeaFragment"
        tools:layout="@layout/fragment_nav_ideas_idea_save" />
    <fragment
        android:id="@+id/topicFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.ideas.topic.TopicFragment"
        android:label="topicFragment"
        tools:layout="@layout/fragment_nav_ideas_topic" >
        <action
            android:id="@+id/action_topicFragment_to_editTopicFragment"
            app:destination="@id/editTopicFragment" />
        <action
            android:id="@+id/action_topicFragment_to_ideaFragment"
            app:destination="@id/ideaFragment" />
        <action
            android:id="@+id/action_topicFragment_to_addIdeaFragment"
            app:destination="@id/addIdeaFragment" />
        <argument
            android:name="topic"
            app:argType="com.martiserramolina.lifeplan.repository.room.Topic" />
    </fragment>
    <fragment
        android:id="@+id/addTopicFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.ideas.topic.add.AddTopicFragment"
        android:label="addTopicFragment"
        tools:layout="@layout/fragment_nav_ideas_topic_save" >
        <action
            android:id="@+id/action_addTopicFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/dayFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.situation.day.DayFragment"
        android:label="dayFragment"
        tools:layout="@layout/fragment_nav_situation_day" >
        <action
            android:id="@+id/action_dayFragment_to_editDayFragment"
            app:destination="@id/editDayFragment" />
        <action
            android:id="@+id/action_dayFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/addDayFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.situation.day.add.AddDayFragment"
        android:label="addDayFragment"
        tools:layout="@layout/fragment_nav_situation_day_save" >
        <action
            android:id="@+id/action_addDayFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/editLifeFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.life.edit.EditLifeFragment"
        android:label="editLifeFragment"
        tools:layout="@layout/fragment_nav_life_save" >
        <action
            android:id="@+id/action_editLifeFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="life"
            app:argType="com.martiserramolina.lifeplan.repository.room.Life"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/editIdeaFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.ideas.idea.edit.EditIdeaFragment"
        android:label="editIdeaFragment"
        tools:layout="@layout/fragment_nav_ideas_idea_save" />
    <fragment
        android:id="@+id/editTopicFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.ideas.topic.edit.EditTopicFragment"
        android:label="editTopicFragment"
        tools:layout="@layout/fragment_nav_ideas_topic_save" >
        <argument
            android:name="topic"
            app:argType="com.martiserramolina.lifeplan.repository.room.Topic" />
    </fragment>
    <fragment
        android:id="@+id/editDayFragment"
        android:name="com.martiserramolina.lifeplan.ui.fragments.secondary_fragments.nav.situation.day.edit.EditDayFragment"
        android:label="editDayFragment"
        tools:layout="@layout/fragment_nav_situation_day_save" />
</navigation>